{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"id": "shell,jbang,-Dcamel.jbang.version=4.8.1,-Dorg.apache.camel.debugger.suspend=true,camel@apache/camel,run,*,--dev,--logging-level=info,--dep=org.apache.camel:camel-debug,--local-kamelet-dir=.,",
			"problemMatcher": [
				"$camel.debug.problemMatcher"
			],
			"label": "camel: Start All Camel applications with debug enabled with JBang",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}